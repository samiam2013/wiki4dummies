<!DOCTYPE html>
<html>
    <head>
        <title>Search Results for "{{.Query}}"</title>
        <style>
        body {
            background-color: #1a1a1a;
            color: #f0f0f0da;
            font-family: Arial, sans-serif;
        }
        .grid-container {
            display: grid;
            height: 100vh; /* Full viewport height to vertically center */
        }

        .grid-item {
            display: flex;
            align-items: center; /* Vertically align */
            justify-content: center; /* Horizontally align */
            flex-direction: column; /* Stack content vertically */
        }

        .result-list {
            width: 60%;
            margin: 0 auto;
        }

        .result-item {
            margin-bottom: 20px;
        }

        .result-item h2 {
            margin: 0;
        }

        .result-item a {
            text-decoration: none;
            color: #f0f0f0;
        }

        .result-item a:hover {
            text-decoration: underline;
        }

        .result-snippet {
            font-size: 0.9em;
            color: gray;
        }

        /* Responsive adjustments */
        @media (max-width: 600px) {
            .result-list {
                width: 90%; /* Adjust width for responsiveness */
            }
        }
        </style>
    </head>
    <body>
        <div class="grid-container">
            <div class="grid-item">
                <h3>Search Results for "{{.Query}}" took {{.SearchTime}}. {{.FilesReturned}} files in the index(es)</h3>
                
                <script>
                    const eventSource = new EventSource('/ai-summary?cache_key={{.CacheKey}}');
            
                    eventSource.onmessage = (event) => {
                        const message = event.data;
                        document.getElementById('messages').innerHTML += message;
                    };
            
                    eventSource.onerror = (event) => {
                        console.log('Error occurred: ', event);
                        eventSource.close();
                    };
            
                    eventSource.onopen = () => {
                        console.log('Connection established');
                    };
                </script>
                <div class="result-list">
                    AI summary answer:
                    <div id="messages"></div>
                    
                    {{range .Results}}
                    <div class="result-item">
                        <h4><a href="{{.URL}}">{{.Title}}</a></h4>
                        <p class="result-snippet">{{.Snippet}}</p>
                    </div>
                    {{else}}
                    <p>No results found for "{{.Query}}".</p>
                    {{end}}
                </div>
            </div>
        </div>
    </body>
</html>
